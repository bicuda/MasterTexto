generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/var/www/mastertexto/backend/prisma/dev.db"
}

model Room {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  content   String   // Stores the huge text blob
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
